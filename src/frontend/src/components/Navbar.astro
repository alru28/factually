---
const links = [
  { href: "/", label: "Home" },
  { href: "/auth", label: "Auth" },
  { href: "/docs", label: "Docs" },
];
---
<header class="bg-fact-blue-900 shadow">
  <nav class="container mx-auto px-4 py-3 flex justify-between items-center">
    <div class="text-xl font-bold">Factually</div>
    <ul class="flex gap-4">
      {links.map(link => (
        <li><a href={link.href} class="hover:text-fact-blue-300 transition">{link.label}</a></li>
      ))}
    </ul>
  </nav>
</header>
