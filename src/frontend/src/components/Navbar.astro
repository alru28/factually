---
import Banner from "./Banner.astro";
const links = [
  { href: "/", label: "Home" },
  { href: "/auth", label: "Auth" },
  { href: "/docs", label: "Docs" },
];
---
<header class="bg-fact-blue-900 shadow">
  <nav class="container mx-auto px-4 py-3 flex items-center justify-between">
    <!-- Logo on the left -->
    <div class="flex items-center space-x-2">
      <Banner width={100} height={20} />
    </div>

    <!-- Nav links on the right -->
    <ul class="flex gap-5">
      {links.map((link) => (
        <li>
          <a 
            href={link.href} 
            class="bg-fact-blue-700 rounded-xl shadow-lg p-2 flex flex-col font-fact-serif font-bold justify-between text-white hover:bg-fact-blue-300 transition"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
